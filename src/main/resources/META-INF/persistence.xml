<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <!-- -->
    <persistence-unit name="UnidadMySQL" transaction-type="RESOURCE_LOCAL">

        <!-- Qué clases queremos mapear -->
        <class>com.es.tema1.hibernate.ejemploHibernateClase.Pelicula</class>
        <class>com.es.tema1.hibernate.ejemploHibernateClase.Cine</class>
        <class>com.es.tema1.hibernate.ejemploHibernateClase.Direccion</class>
        <class>com.es.tema1.hibernate.ejemploHibernateClase.Director</class>

        <properties>
            <!-- Qué BDD usar -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <!-- Dónde está la BASE DE DATOS --> <!-- jdbc:mysql://ip:puerto/nombre_base_de_datos -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/pruebabd" />
            <!-- Credenciales -->
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />

            <!-- Qué lenguaje de BDD se usa -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <!-- ¿Qué pasa cuando inicio la aplicación? -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>

        <!--<property name="javax.persistence.sql-load-script-source" value="META-INF/import.sql"/>-->

    </properties>

</persistence-unit>

