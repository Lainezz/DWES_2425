<persistence-unit name="unit_Empleados" transaction-type="RESOURCE_LOCAL">

    <!-- Qué clases queremos mapear -->
        <class>com.es.tema1.hibernate.crudHibernate.model.Empleado</class>

        <properties>
            <!-- Qué BDD usar -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <!-- Dónde está la BASE DE DATOS --> <!-- jdbc:mysql://ip:puerto/nombre_base_de_datos -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/pruebabd" />
            <!-- Credenciales -->
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />

            <!-- Qué lenguaje de BDD se usa -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <!-- ¿Qué pasa cuando inicio la aplicación? -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.connection.characterEncoding" value="utf8" />
            <property name="hibernate.connection.charSet" value="utf8" />

            <property name="javax.persistence.sql-load-script-source" value="META-INF/import.sql"/>

        </properties>

    </persistence-unit>

</persistence>